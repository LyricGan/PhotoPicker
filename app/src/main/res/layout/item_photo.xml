<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.photopicker.library.view.PhotoView
        android:id="@id/photo_picker_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:backgroundImage="@drawable/album_photo_bg"
        fresco:fadeDuration="300"
        fresco:failureImage="@mipmap/ic_broken_image_black"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_photo_black"
        fresco:placeholderImageScaleType="centerCrop"/>

    <ImageView
        android:id="@id/photo_picker_iv_select_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="5dp"
        android:contentDescription="@null"
        android:padding="5dp"/>

</FrameLayout>
